<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <!-- 6 columns -->

    <TableRow
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#656565"
        android:padding="50dp"
        android:layout_weight="1"
        android:gravity="right">

        <TextView
            android:id="@+id/textView"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>

        <TextView
            android:id="@+id/textViewExpression"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:id="@+id/textViewResult"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </TableRow>

    <!-- Display buttons in 2nd column via layout_column(zero based) -->

    <TableRow
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonAC"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="AC"
            android:textColor="@color/black"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="+/-"
            android:textColor="@color/black"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/buttonModulus"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="%"
            android:textColor="@color/black"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_span="1"
            android:backgroundTint="#FF8C00"
            android:text="/"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

    </TableRow>

    <!-- Display buttons in 3rd column via layout_column(zero based) -->

    <TableRow
        android:id="@+id/row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button7"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="7"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/button8"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="8"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/button9"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="9"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_span="1"
            android:backgroundTint="#FF8C00"
            android:text="*"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

    </TableRow>

    <!-- Display buttons in 4th column via layout_column(zero based) -->

    <TableRow
        android:id="@+id/row4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button4"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="4"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/button5"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="5"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/button6"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="6"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_span="1"
            android:backgroundTint="#FF8C00"
            android:text="-"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

    </TableRow>

    <!-- Display buttons in 5th column via layout_column(zero based) -->

    <TableRow
        android:id="@+id/row5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="1"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/button2"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="2"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/button3"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="3"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_span="1"
            android:backgroundTint="#FF8C00"
            android:text="+"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

    </TableRow>

    <!-- Display buttons in 6th column via layout_column(zero based) -->

    <TableRow
        android:id="@+id/row6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button0"
            android:layout_span="2"
            android:backgroundTint="#D3D3D3"
            android:text="0"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_span="1"
            android:backgroundTint="#D3D3D3"
            android:text="."
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_span="2"
            android:backgroundTint="#FF8C00"
            android:text="="
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:onClick="btnOnClick" />

    </TableRow>

</TableLayout>
